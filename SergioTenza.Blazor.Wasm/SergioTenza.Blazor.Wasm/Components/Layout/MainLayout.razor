@inherits LayoutComponentBase

<FluentLayout Style="margin-top: 10px;">    
    <FluentHeader>
        <FluentPersona Style="padding: 5px;"
            Image="assets/logo.png"
            ImageSize="50px">
        </FluentPersona>
        <FluentSpacer />
        TNZ Servicios Informaticos
        @* 
        Soluciones empresariales con Blazor y dotnet *@
    </FluentHeader>  
     <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">        
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
        <FluentDialogProvider />
        <FluentToastProvider/>
    </FluentStack>   
    <FluentFooter>
        
        <FluentStack Orientation="Orientation.Vertical" VerticalAlignment="VerticalAlignment.Center" HorizontalAlignment="HorizontalAlignment.Center" Width="100%" Style=@("height: 40px; color: black; text-align: center;")>                       
            <p>TNZ Servicios Informaticos &copy; 2024. Todos los derechos reservados.</p>
        </FluentStack>
    </FluentFooter>
</FluentLayout>


<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

